
<div class="card">
  <div class="card-title">
    <h4>Box -> 여기 뭐 들어갈지 고민 ㄱㄱ</h4>
  </div>
  <div class="card-body">
  <button type="button" onClick='Refresh()'>파일 리스트 최신화</button>
  <p></p>
  <form id="uploadform" method='post' enctype="multipart/form-data">
    현재폴더에 :&nbsp;
    <input type='file' id='uploadfile' name='uploadfile'>
    <button type="button" onclick='UploadSubmit()'>업로드</button>
    &nbsp;&nbsp;
    <input type="text" name="foldername" placeholder="새폴더 이름">
    <button type="button" onClick='CreateFolder()'>새폴더 만들기</button>
  </form>
  <p></p>
  <form name='action_box' method='post'>
    체크박스 :&nbsp;
    <button type="button" onClick='Submit("download")'>다운로드(개발중,파일만)</button>&nbsp;&nbsp;
    <button type="button" onClick='Delete()'>삭제(파일만, 폴더도추가해야)</button>&nbsp;&nbsp;
    <input type="text" name="filename" placeholder="새이름">
    <button type="button" onClick='Rename()'>이름 바꾸기(개발중)</button>&nbsp;&nbsp;
    <input type="text" name="pathid" placeholder="폴더 ID">
    <button type="button" onClick='MovePath()'>경로 이동(개발중)</button>
    <p></p>
    <div class="table-responsive">
      <table class="table table-hover" id="table_box">
        <thead>
          <tr>
            <td> </td>
            <td>번 호</td>
            <td>파일이름</td>
            <td>파일형식</td>
            <td>올린날짜</td>
            <td>파일용량</td>
          </tr>
        </thead>
        <tbody>
        <%
                <!--byte to kb,mb,gb  -->
                function formatBytes(bytes,decimals) {
                   if(bytes == 0) return '0 Bytes';
                   var k = 1024,
                       dm = decimals || 2,
                       sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'],
                       i = Math.floor(Math.log(bytes) / Math.log(k));
                   return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
                }
                  if(filelist.length>0){
                     for(var i=0; i < filelist.length; i++)
                     {
                        var oneItem = filelist[i];
                        var size = formatBytes(oneItem.size,3);
                        if(oneItem.mimeType=='folder'){
                          %>

            <tr class="folder-row">
              <td><input type="checkbox" name="name" value="<%=oneItem.id%>"></td>
              <td>
                <%=i%>
              </td>
              <!--폴더라면 폴더 ID를 넘겨서 다시 URL을 전송한다.-->
              <td data-id='<%=oneItem.id%>'>
                <a href="#" onclick="moveFolder_box(this)" value='<%=oneItem.id%>'>
                  <%=oneItem.name%>
                </a>
              </td>
              <td>
                <%=oneItem.mimeType%>
              </td>
              <td>
                <%=oneItem.modifiedTime%>
              </td>
              <td>
                <%=size%>
              </td>
            </tr>
             <%
                } else {
             %>

            <tr class="file-row">
              <td><input type="checkbox" name="name" value="<%=oneItem.id%>"></td>
              <td>
                <%=i%>
              </td>
              <td>
                <%=oneItem.name%>
              </td>
              <td>
                <%=oneItem.mimeType%>
              </td>
              <td>
                <%=oneItem.modifiedTime%>
              </td>
              <td>
                <%=size%>
              </td>
            </tr>
            <%
                      }
                    }
                  }
             %>
        </tbody>
      </table>
    </div>
    <!-- end of table-responsive -->
  </form>
  <p></p>
  <form action='box/rename/file' method='post' enctype="multipart/form-data">
    <button type="submit">파일 이름바꾸기</button>
  </form>
  <form action='box/rename/folder' method='post' enctype="multipart/form-data">
    <button type="submit">폴더 이름바꾸기</button>
  </form>
  <form action='box/move/file' method='post' enctype="multipart/form-data">
    <button type="submit">파일 이동</button>
  </form>
  <form action='box/move/folder' method='post' enctype="multipart/form-data">
    <button type="submit">폴더 이동</button>
  </form>
  <form action='box/thumbnail' method='post' enctype="multipart/form-data">
    <button type="submit">썸네일</button>
  </form>
  <form action='box/search' method='post' enctype="multipart/form-data">
    <button type="submit">검색</button>
  </form>
  </div>
  <!-- end of card-body -->
</div>
<!-- end of card -->

<script>
  function Submit(index) {
    if (index == 'download') {
      document.action_box.action = 'box/download';
    }
    document.action_box.submit();
  }

  function UploadSubmit() {
    // uploadform.action = 'box/upload/<%=FolderID%>';
    // uploadform.submit();
    // $('.replace').load("box/<%=FolderID%>");
    var form = $('#uploadform')[0];
    var formData = new FormData(form);
    // formData.append("uploadfile", $("#uploadfile")[0].files[0]);
    $.ajax({
      type: "POST",
      url: "box/upload/<%=FolderID%>",
      async: false,
      data: formData,
      processData: false,
      contentType: false,
      success: function(json) {
        console.log(json);
        $('.replace').load("box/folder/<%=FolderID%>");
      },
      error: function(error) {
        console.log(error);
      }
    });
  }

  function Delete() {
    // 체크박스의 갯수를 변수에 담는다.
    var chklen = action_box.name.length;
    var name = '';
    // 체크박스 갯수만큼 for 문을 돌려 체크된 놈의 value값을 가져온다.
    for (i = 0; i < chklen; i++) {
      if (action_box.name[i].checked == true) {
        name = action_box.name[i].value;
        break;
      }
    }
    if (name == '') {
      alert("삭제하실 파일이나 폴더를 체크해주세요");
    } else {
      var body = {
        "name": name
      }

      $.ajax({
        type: "POST",
        url: "box/delete/",
        async: true,
        data: body,
        dataType: "JSON",
        success: function(json) {
          console.log(json);
          $('.replace').load("box/folder/<%=FolderID%>");
        },
        error: function(error) {
          console.log(error);
        }
      });
    }
  }

  function Refresh() {
    $.ajax({
      type: "POST",
      url: "box/folder/refresh/",
      async: false,
      success: function(json) {
        console.log(json);
        $('.replace').load("box/folder/<%=FolderID%>");
      },
      error: function(error) {
        console.log(error);
      }
    });
  }

  function CreateFolder() {
    var body = {
      "foldername": uploadform.foldername.value,
      "folderId": "<%=FolderID%>"
    }
    $.ajax({
      type: "POST",
      url: "box/create",
      async: true,
      data: body,
      dataType: "JSON",
      success: function(json) {
        console.log(json);
        $('.replace').load("box/folder/<%=FolderID%>");
      },
      error: function(error) {
        console.log(error);
      }
    });
  }
</script>
<script src="js/loadfolder.js"></script>
