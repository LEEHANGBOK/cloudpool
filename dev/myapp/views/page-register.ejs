<body class="fix-header fix-sidebar register-body">
  <!-- Preloader - style you can find in spinners.css -->
  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
  </div>
  <!-- header -->
  <header class='login-body-header'><a class="logo" href="/intro">CloudPool</a></header>
  <!-- Main wrapper  -->
  <div id="main-wrapper">

    <div class="unix-login">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-lg-4">
            <div class="login-content card">
              <div class="login-form">
                <h4>회원가입</h4>
                <form name="joinACtion" id="joinForm" action="auth/register" method="post">
                  <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-username">이름 <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                      <input type="text" class="form-control" id="cp_username" name="cp_username" placeholder="예시) 홍길동">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-email">이메일 <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                      <input type="email" class="form-control" id="cp_email" name="cp_email" placeholder="예시) user@email.com">
                      <span style="font-size: 11px">이메일 중복 체크: </span>
                      <span id="email_dup_check" style="font-size: 11px"></span>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-password">비밀번호 <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                      <input type="password" class="form-control" id="cp_password" name="cp_password" placeholder="영문, 숫자, 특수기호 혼합">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-confirm-password">비밀번호 재입력 <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                      <input type="password" class="form-control" id="cp_password_check" name="cp_password_check" placeholder="비밀번호를 재입력 해주세요">
                    </div>
                  </div>
                  <div class="checkbox">
                    <label>
  										<input type="checkbox"> 약관 동의
  									</label>
                  </div>
                  <button type="button" onClick="addUser();" class="btn btn-primary btn-flat m-b-30 m-t-30">등록 하기</button>
                  <div class="register-link m-t-15 text-center">
                    <p>이미 계정이 있으신가요? <a href="/login"> 로그인</a></p>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- End Wrapper -->
  <!-- All Jquery -->
  <script src="js/lib/jquery/jquery.min.js"></script>
  <!-- Bootstrap tether Core JavaScript -->
  <script src="js/lib/bootstrap/js/popper.min.js"></script>
  <script src="js/lib/bootstrap/js/bootstrap.min.js"></script>
  <!-- slimscrollbar scrollbar JavaScript -->
  <script src="js/jquery.slimscroll.js"></script>
  <!--Menu sidebar -->
  <script src="js/sidebarmenu.js"></script>
  <!--stickey kit -->
  <script src="js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
  <!--Custom JavaScript -->
  <script src="js/scripts.js"></script>
  <!-- check password -->
  <!--<script src="js/jquery-1.10.2.js"></script>-->
  <script>


    function addUser() {
      // 빈칸 체크
      // 비밀번호 길이 영어숫자 확인
      var pw = $('#cp_password').val();
      var repw = $('#cp_password_check').val();
      var name = $('#cp_username').val();
      var email = $('#cp_email').val();
      var dup_check = $('#email_dup_check').val();
      var pwchk = /^(?=.*[a-zA-Z])(?=.*[!@#$%^*+=-])(?=.*[0-9]).{4,12}$/; // password check
      var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i; // email check
      if (pw == '' || repw == '' || name == '' || email == '') {
        alert("모든 칸을 채워주세요.");
      } else {
        if (pwchk.test(pw) == false) {
          alert("비밀번호는 4~12자리 영어와 숫자, 특수문자가 모두 포함되어야 합니다.");
          pw.focus();
        } else {
          if (pw != repw) {
            alert("비밀번호는 똑같아야 합니다.");
          } else {
            if (email === '' || !re.test(email)) {
              alert("이메일을 확인하세요.");
            } else {
              $('#joinForm').submit();
            }
          }
        }
      }
    }

    $(function() {
      $('#cp_email').keyup(function() {
        if ($('#cp_email').val().length >= 4) {
          var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i; // email check
          if (!re.test($('#cp_email').val())) {
            $('#email_dup_check').html("이메일 형식을 확인하세요.").css('color', 'red');
          } else {
            $.get('/auth/check_email?email=' + $('#cp_email').val(), function(result) {
              if (result.result == 1) {
                $('#email_dup_check').html("해당 이메일은 이미 존재합니다.").css('color', 'red');
              } else {
                $('#email_dup_check').html("사용 가능합니다.").css('color', 'blue');
              }
            });
          }
        }
      });
    });
  </script>

